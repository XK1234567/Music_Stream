<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tp.edu.musicstream">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicStream">
        <activity android:name=".NewUserHome" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignUpAinSong" />
        <activity android:name=".SearchPage" />
        <activity android:name=".SchoolPlaylist" />
        <activity android:name=".ChillPlaylist" />
        <activity android:name=".PlaylistPage" />
        <activity android:name=".LoginSignup" />
        <activity android:name=".StudyPlaylist" />
        <activity android:name=".PlaySongActivity" />
        <activity android:name=".StartUp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>